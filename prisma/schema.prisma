// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

   
model Account {
  id Int     @id @default(autoincrement())
  IBAN String @unique
  balance Float
  currency String
  bic String
  lastBankSynchronization DateTime

}

model Transaction {
  id Int     @id @default(autoincrement())
  amount Float
  currency String
  valueDate DateTime
  creationDate DateTime
  status String
  reference String
}


model User {
  id Int      @id @default(autoincrement())
  name String 
  email String @unique
  password String
}

